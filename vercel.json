{
  "version": 2,
  "buildCommand": "echo 'Static site - no build step required'",
  "outputDirectory": ".",
  "routes": [
    { "src": "/index.html", "dest": "/index.html" },
    { "src": "/compliance.html", "dest": "/compliance.html" },
    { "src": "/assets.html", "dest": "/assets.html" },
    { "src": "/work-orders.html", "dest": "/work-orders.html" },
    { "src": "/customers.html", "dest": "/customers.html" },
    { "src": "/inventory.html", "dest": "/inventory.html" },
    { "src": "/settings.html", "dest": "/settings.html" },
    { "src": "/login.html", "dest": "/login.html" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}